{
  "name": "pot-benchmarks-runner",
  "version": "3.0.0",
  "description": "CLI runner for pot-benchmarks â€” includes self-evolving benchmark engine",
  "type": "module",
  "scripts": {
    "run": "node run.js",
    "run:auto-evolve": "node run.js --auto-evolve",
    "run:quick": "node run.js --category verified-true --category hallucination",
    "run:claim-injection": "node run.js --category claim-injection",
    "evolve": "node evolve.js",
    "evolve:hallucination": "node evolve.js --category hallucination --count 5",
    "evolve:adversarial": "node evolve.js --category adversarial --count 5",
    "evolve:dry-run": "node evolve.js --dry-run --count 3",
    "evolve:validate": "node evolve.js --validate"
  },
  "dependencies": {
    "pot-sdk": "^0.2.0"
  }
}
